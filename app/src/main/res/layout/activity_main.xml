<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/nA"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="50sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/nA"
            android:id="@+id/bottomTable"
            >
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <Button
                    android:id="@+id/BClear"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:text="C"
                    android:background="@android:color/darker_gray"/>
                <Button
                    android:id="@+id/BHis"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:text="History"
                    android:background="@android:color/darker_gray"/>
                <Button
                    android:id="@+id/BTrans"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:text="T"
                    android:background="@android:color/darker_gray"/>

                <Button
                    android:id="@+id/BDiv"
                    android:layout_width="113dp"
                    android:layout_height="80dp"
                    android:background="@android:color/darker_gray"
                    android:text="÷" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <Button
                    android:id="@+id/B1"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:text="1"
                    android:background="#666666" />
                <Button
                    android:id="@+id/B2"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:text="2"
                    android:background="#666666"/>
                <Button
                    android:id="@+id/B3"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:text="3"
                    android:background="#666666"/>
                <Button
                    android:id="@+id/BMultiply"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:text="X"
                    android:background="@android:color/darker_gray"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <Button
                    android:id="@+id/B4"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:text="4"
                    android:background="#666666"/>
                <Button
                    android:id="@+id/B5"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:text="5"
                    android:background="#666666"/>
                <Button
                    android:id="@+id/B6"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:text="6"
                    android:background="#666666"/>
                <Button
                    android:id="@+id/BSub"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:text="-"
                    android:background="@android:color/darker_gray"/>

                <Button
                    android:id="@+id/Bcos"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:background="@android:color/darker_gray"
                    android:text="cos()" />

                <Button
                    android:id="@+id/Bsin"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:background="@android:color/darker_gray"
                    android:text="sin()" />

                <Button
                    android:id="@+id/Btan"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:background="@android:color/darker_gray"
                    android:text="tan()" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <Button
                    android:id="@+id/B7"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:text="7"
                    android:background="#666666"/>
                <Button
                    android:id="@+id/B8"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:text="8"
                    android:background="#666666"/>
                <Button
                    android:id="@+id/B9"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:text="9"
                    android:background="#666666"/>
                <Button
                    android:id="@+id/Badd"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:text="+"
                    android:background="@android:color/darker_gray"/>
                <Button
                    android:id="@+id/Bquadrat"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:background="@android:color/darker_gray"
                    android:text="X²" />

                <Button
                    android:id="@+id/Bcube"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:background="@android:color/darker_gray"
                    android:text="X³" />

                <Button
                    android:id="@+id/Bexponent"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:background="@android:color/darker_gray"
                    android:text="X^x" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <Button
                    android:id="@+id/BOr"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:text="←"
                    android:background="#666666"/>
                <Button
                    android:id="@+id/B0"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:text="0"
                    android:background="#666666"/>
                <Button
                    android:id="@+id/Bp"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:text="."
                    android:background="#666666"/>
                <Button
                    android:id="@+id/BRes"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:text="="
                    android:background="@android:color/darker_gray"/>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_height="400dp"
            android:layout_width="300dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/nA"
            android:visibility="invisible"
            android:background="#50616d"
            android:id="@+id/nB"
            android:orientation="vertical">
            <Button
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:text="Clear"
                android:id="@+id/HClear"/>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:id="@+id/LV">
            </ListView>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>